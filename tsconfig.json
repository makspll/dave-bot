{
    "compilerOptions": {
        "noEmit": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "esnext"
        ],
        "strict": true,
        "types": [
            "@cloudflare/workers-types",
            "@types/node",
            "jest"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "moduleDetection": "force",
        "isolatedModules": true,
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ],
}